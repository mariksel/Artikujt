<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/primaryLight">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/emriTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Emri"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <EditText
                android:id="@+id/emriEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Emri"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:background="@drawable/input_bg"/>

            <TextView
                android:id="@+id/njesiaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Njesia"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/njesiaEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Njesia"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:background="@drawable/input_bg"/>

            <TextView
                android:id="@+id/dataSkadencesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Data Skadences"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />


            <EditText
                android:id="@+id/dataSkadencesEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Data Skadences"
                android:inputType="none"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="false"
                android:background="@drawable/input_bg" />

            <TextView
                android:id="@+id/cmimiTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Cmimi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/cmimiEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Cmimi"
                android:inputType="numberDecimal"
                android:digits="0123456789."
                android:padding="15dp"
                android:background="@drawable/input_bg"/>

            <TextView
                android:id="@+id/llojTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Lloj"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <RadioGroup
                android:id="@+id/llojRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/input_bg"
                android:padding="10dp"
                android:radius="10dp">

                <RadioButton
                    android:id="@+id/importuarRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Importuar"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/vendiRadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Vendi"
                    android:textSize="16sp"

                    android:textStyle="bold" />
            </RadioGroup>

            <TextView
                android:id="@+id/kaTvshTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TVSH"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:padding="10dp">
                <CheckBox
                    android:id="@+id/kaTvshCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ka TVSH?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tipiTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Tipi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />
            <Spinner
                android:id="@+id/tipiSpinner"
                android:layout_width="match_parent"
                android:minHeight="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/spiner_bg"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:popupBackground="@color/primaryLight"/>

            <TextView
                android:id="@+id/barkodTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Barkod"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/barkodEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Barkod"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:background="@drawable/input_bg"/>

        </LinearLayout>
    </ScrollView>





</LinearLayout>